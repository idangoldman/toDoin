{
    "name": "toDoin",
    "version": "4.0.0",
    "manifest_version": 2,
    "description": "Keep Things Simple.",
    "homepage_url": "http://todo.help",
    "default_locale": "en",
    "offline_enabled": true,
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "background": {
        "page": "index.html"
    },
    "browser_action": {
        "default_icon": "icons/16.png",
        "default_title": "toDoin 4.0.0",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "cookies",
        "contextMenus",
        "fontSettings"
    ]
}
